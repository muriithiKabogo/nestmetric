
<head>  
<%= javascript_include_tag 'application' %>
<%= javascript_include_tag "https://js.stripe.com/v3"%>
<%= stylesheet_link_tag "dashboard/custom.css"%>

</head>

<body>
<form action="/riskycustomers" method="post" >
<%= image_tag "buffer.png", class: 'logo-default' ,style: "max-height: 50px; margin: 0;texy-align: center;"%><br><br><br>
  <div class="group">
    <label>
      <span>Name</span>
      <input name="cardholder-name" class="field" placeholder="Jane Doe" />
    </label>
    <label>
      <span>Phone</span>
      <input class="field" placeholder="(123) 456-7890" type="tel" />
    </label>
  </div>
  <div class="group">
    <label>
      <span>Card</span>
      <div id="card-element" class="field"></div>
    </label>
  </div>
  <button type="submit">Update credit card</button>
  <div class="outcome">
    <div class="error" role="alert"></div>
    <div class="success">
      Success! Your Stripe token is <span class="token"></span>
    </div>
  </div>
</form>

<%= javascript_include_tag "stripe.js" %>
</body>